<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/popup_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sort_up_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_up"
                    android:layout_marginLeft="18dp"/>

                <TextView
                    android:id="@+id/sort_by_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/sort_up_image"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="@string/sort_by_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/done_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_selected"
                    android:layout_marginRight="18dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sort_up_newest_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_up"
                    android:layout_marginLeft="18dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/sort_by_newest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/sort_up_newest_image"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="@string/sort_by_newest"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/done_sort_newest_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_selected"
                    android:layout_marginRight="18dp"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sort_up_size_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_up"
                    android:layout_marginLeft="18dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/sort_by_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/sort_up_size_image"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="@string/sort_by_size"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/done_sort_size_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_selected"
                    android:layout_marginRight="18dp"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sort_up_date_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_up"
                    android:layout_marginLeft="18dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/sort_by_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/sort_up_date_image"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="@string/sort_by_date"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/done_sort_date_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_sort_selected"
                    android:layout_marginRight="18dp"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_sort_up"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/sort_by_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:alpha="0.87"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:padding="16dp"
                android:text="@string/sort_by_newest"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:alpha="0.87"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:padding="16dp"
                android:text="@string/sort_by_size"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:alpha="0.87"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:padding="16dp"
                android:text="@string/sort_by_date"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:alpha="0.87"
                android:visibility="gone" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>