<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/popup_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clear_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:drawableLeft="@mipmap/ic_sort_selected"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/clear_selection"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/available_offline_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/download_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_download"
                    android:layout_marginLeft="18dp"/>

                <TextView
                    android:id="@+id/available_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/download_image"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="@string/available_offline"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchButton_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:checked="false" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/share_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_share"
                    android:layout_marginLeft="18dp"/>

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/share_image"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="@string/share_item"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="visible"
                     />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchButton_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:checked="false" />

            </RelativeLayout>

            <TextView
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:drawableLeft="@mipmap/ic_copy"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/copy"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/move"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:drawableLeft="@mipmap/ic_move"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/move"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/rename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:drawableLeft="@mipmap/ic_rename"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/rename"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_delete"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/delete"
                android:textColor="@color/dark_red"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>