<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/nameIndicatorParentView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/gray_non_pressed"
            android:visibility="visible"
            android:alpha="0.64">

            <TextView
                android:id="@+id/indicatorTextValueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="A"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:alpha="0.87"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/list_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameIndicatorParentView"
            android:orientation="horizontal"
            android:padding="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/list_item_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/morelayout">

                    <RelativeLayout
                        android:id="@+id/folder_file_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/folder_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/folder"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@mipmap/ic_folder"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/unread_count"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_alignRight="@+id/folder"
                                android:layout_alignTop="@+id/folder"
                                android:background="@drawable/circle_upload_color"
                                android:gravity="center"
                                android:layout_marginTop="4dp"
                                android:visibility="gone"
                                android:textSize="10sp"
                                android:padding="2dp"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/thumbnail_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/thumbnail_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@mipmap/ic_thumbnail" />

                            <ImageView
                                android:id="@+id/thumbnail_corner_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignTop="@+id/thumbnail_image"
                                android:src="@mipmap/ic_thumbnail_corner"
                                android:visibility="invisible"/>

                            <TextView
                                android:id="@+id/thumbnail_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="pdf"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/selected_item"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_color"
                        android:padding="4dp"
                        android:src="@mipmap/ic_sort_selected"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/folder_rl_2"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/folder_file_layout"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="0dp">

                            <TextView
                                android:id="@+id/folder_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:alpha="0.87"
                                android:text="File "
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/folder_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/folder_name"
                                android:layout_centerVertical="true"
                                android:alpha="0.87"
                                android:text="Date Created"
                                android:textColor="@color/black"
                                android:textSize="14sp">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/morelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_more" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
