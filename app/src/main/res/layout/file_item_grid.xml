<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/grid_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_folder" />

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folder"
            android:gravity="center"
            android:text="File"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:alpha="0.87"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_below="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_more"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/selected_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/folder"
            android:layout_alignTop="@+id/folder"
            android:background="@drawable/circle_color"
            android:padding="4dp"
            android:src="@mipmap/ic_sort_selected"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>