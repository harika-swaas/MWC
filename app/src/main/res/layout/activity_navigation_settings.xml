<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                app:contentScrim="?android:attr/colorPrimary"
                app:expandedTitleMarginTop="30dp"
                app:expandedTitleMarginBottom="30dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="60dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/mNestedScrollViewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <LinearLayout
                    android:id="@+id/mViewLinearLayoutView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/logo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/LOGO_image"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:src="@mipmap/ic_launcher"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/very_light_gray"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/username_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:id="@+id/user_name_txt"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.87"
                                android:layout_marginLeft="20dp"
                                android:text="@string/user_name_txt"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />


                            <ImageView
                                android:id="@+id/right_image1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:alpha="0.4"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp"
                                android:src="@mipmap/ic_chevron_right_black_24dp" />


                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/offline_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:id="@+id/offline_files_txt"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.87"
                                android:layout_marginLeft="20dp"
                                android:text="@string/user_offline_files_txt"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />


                            <ImageView
                                android:id="@+id/right_image2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:alpha="0.4"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp"
                                android:src="@mipmap/ic_chevron_right_black_24dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    android:id="@+id/push_notification_txt"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.87"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/push_notification_txt"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />


                                <android.support.v7.widget.SwitchCompat
                                    android:id="@+id/push_notification_Switch"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:layout_marginRight="20dp"
                                    android:visibility="visible"/>


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/light_gray" />

                            <LinearLayout
                                android:id="@+id/finger_print_layout"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    android:id="@+id/finger_print_txt"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.87"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/finger_print_txt"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />


                                <android.support.v7.widget.SwitchCompat
                                    android:id="@+id/finger_print_Switch"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:checked="false"
                                    android:visibility="visible"/>


                            </LinearLayout>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/help_layout"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:visibility="gone"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    android:id="@+id/help_txt"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.87"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/help_txt"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />


                                <ImageView
                                    android:id="@+id/right_image3"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.4"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:src="@mipmap/ic_chevron_right_black_24dp" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:layout_marginLeft="20dp"
                                android:background="@color/light_gray" />

                            <LinearLayout
                                android:id="@+id/terms_privacy_layout"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    android:id="@+id/terms_privacy_txt"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.87"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/terms_privacy_txt"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />


                                <ImageView
                                    android:id="@+id/right_image4"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.4"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:src="@mipmap/ic_chevron_right_black_24dp" />


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/logout_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:id="@+id/logout_txt"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.87"
                                android:layout_marginLeft="20dp"
                                android:text="@string/logout_txt"
                                android:textColor="@color/dark_red"
                                android:textSize="16sp" />


                            <ImageView
                                android:id="@+id/right_image5"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:alpha="0.4"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp"
                                android:src="@mipmap/ic_chevron_right_black_24dp" />


                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>



    <include
        layout="@layout/activity_dms_bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>