<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                app:contentScrim="?android:attr/colorPrimary"
                app:expandedTitleMarginTop="30dp"
                app:expandedTitleMarginBottom="30dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="60dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

            <android.support.design.widget.AppBarLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_collapseMode="pin"
                    android:id="@+id/sorting_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <LinearLayout
                            android:id="@+id/sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/name_sort"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:alpha="0.87"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/sort_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/name_sort"
                                android:src="@mipmap/ic_sort" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/toggle_view"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <ImageView
                                android:id="@+id/toggle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_list" />

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.design.widget.AppBarLayout>


        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:id="@+id/shared_bottom_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:layout_marginTop="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_dms"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:clipToPadding="false"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/no_documents_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="" />

            <Button
                android:id="@+id/refresh_button"
                android:layout_width="120dp"
                android:layout_height="37dp"
                android:layout_marginTop="25dp"
                android:textAllCaps="true"
                android:text="Refresh"
                android:textColor="@color/sky_blue"
                android:background="@drawable/background_rectangle"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="16sp"/>

        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>


    <include
        layout="@layout/activity_dms_bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        />

    <RelativeLayout
        android:id="@+id/move_layout"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@color/black"
        android:alpha="0.64"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Please choose a location"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginRight="16dp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/title_textview"
            android:weightSum="2">

            <TextView
                android:id="@+id/cancel_textview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/move_textview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginRight="16dp"
                android:visibility="visible"/>



        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>