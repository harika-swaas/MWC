<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#717171">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Delete"
                android:id="@+id/title"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/alertmessage"
        android:layout_below="@+id/rl_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">


        <TextView
            android:id="@+id/alertmessage1"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="You are about to delete the folder what would you like to do with documents inside the folder?"
            android:textColor="#717171"
            android:textSize="14sp" />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/message_text"
        android:layout_below="@+id/rl_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="visible"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">


        <Button
            android:id="@+id/delete"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="Delete Documents"
            android:textColor="#717171"
            android:textSize="16sp" />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/message_text1"
        android:layout_below="@+id/rl_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:visibility="visible"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">



        <Button
            android:id="@+id/movefolder"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:text="Move to folder "
            android:textAlignment="center"
            android:textColor="#717171"
            android:textSize="16sp" />



    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/canceldelete"
            android:layout_below="@+id/rl_alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:visibility="visible"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">



            <Button
                android:id="@+id/canceldel"
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="Cancel "
                android:textColor="#717171"
                android:textSize="16sp" />



        </RelativeLayout>


</RelativeLayout>